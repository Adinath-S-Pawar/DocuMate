{
  "name": "DocuMate",
  "description": "Smart research helper to suggest insights, explain concepts, and summarize web content.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions":[
        "activeTab",
        "storage",
        "sidePanel",
        "scripting"
  ],
  "action": {
        "default_title" : "DocuMate"
  },
  "side_panel" : {
        "default_path" : "sidePanel.html"
  },
  "background":{
        "service_worker" : "background.js"
  },
  "host_permissions":[
    "http://localhost:8080/*",
    "<all_urls>"
  ],
  "content_security_policy":{
        "extension_pages": "script-src 'self'; object-src 'self' " 
  }
}